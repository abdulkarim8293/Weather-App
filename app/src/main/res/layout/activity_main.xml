<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/day_date_month_text_view"
            android:textStyle="normal"
            android:text="Thursday,20th May"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_text_view"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="12:02 PM"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/city_country_text_view"
            android:textStyle="normal"
            android:text="Dhaka , BD"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/weather_image_status"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/snow"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/weather_temperature_text_view"
            android:textSize="30sp"
            android:textStyle="normal"
            android:text="20 c"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weather_type_text_view"
            android:textSize="50sp"
            android:textStyle="normal"
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="normal"
                android:text="Feels Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/weather_feels_like_text_view"
                android:layout_margin="5dp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/weather_description_text_view"
                android:text="Description"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_advice_description_text_view"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textSize="14sp"
            android:text="Let's go out side...."
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#ddd"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/wind_flow_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#EDEDED"
                android:drawableTop="@drawable/ic_wind_24"
                android:gravity="center"
                android:padding="5dp"
                android:text="Wind Flow\n100" />

            <TextView
                android:id="@+id/min_max_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#EDEDED"
                android:drawableTop="@drawable/ic_24"
                android:gravity="center"
                android:padding="5dp"
                android:text="Min Max\n100" />

            <TextView
                android:id="@+id/humidity_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#EDEDED"
                android:drawableTop="@drawable/ic_humidity_24"
                android:gravity="center"
                android:padding="5dp"
                android:text="Humidity\n100" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/button"
                android:background="#EDEDED"
                android:padding="5dp"
                android:text="Forecast"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_next_24"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/cityTextView"
                android:background="#EDEDED"
                android:padding="5dp"
                android:text="Location"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_search"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/settingsTextView"
                android:background="#EDEDED"
                android:padding="5dp"
                android:text="Settings"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_settings"
                android:layout_height="60dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>